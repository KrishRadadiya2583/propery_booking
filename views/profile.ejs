<% layout("/layouts/boilerplate") %>
<link rel="stylesheet" href="/css/profile.css">

<div class="profile-container">

  <% if (!currentUser) { %>

    <!-- USER NOT FOUND -->
    <div class="profile-card profile-not-found text-center">

  <i class="fa-solid fa-circle-exclamation profile-avatar warning-icon"></i>

  <h2 class="not-found-title">User not found</h2>
  <p class="not-found-text">
    Please log in to access your profile and manage your account.
  </p>

  <a href="/" class="btn btn-airbnb mt-3">
    Log in
  </a>

</div>


  <% } else { %>

    <!-- USER PROFILE -->
    <div class="profile-card text-center">

      <i class="fa-solid fa-user-circle profile-avatar"></i>

      <div class="profile-name"><%= currentUser.name %></div>
      <div class="profile-email"><%= currentUser.email %></div>

      <div class="profile-bookings">
       
        <a href="/profile/listings" class="btn btn-airbnb">Your Listings</a>

        <a href="/profile/bookings" class="btn btn-airbnb">Your Trips</a>
      </div>

      <hr class="profile-divider">

      <div class="profile-actions d-grid gap-3">

        <a href="/profile/edit-profile" class="btn btn-airbnb">
          Edit Profile
        </a>

        <form action="/logout" method="POST">
          <button type="submit" class="btn btn-logout w-100">
            Logout
          </button>
        </form>

      </div>

    </div>

  <% } %>

</div>
