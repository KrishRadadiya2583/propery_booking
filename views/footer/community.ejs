<% layout("/layouts/boilerplate") %>

<link rel="stylesheet" href="/css/community.css" />

<header class="forum-hero">
  <div class="hero-content">
    <h1>Community Forum</h1>
    <p>Connect with other hosts and guests, share experiences, and get tips.</p>
  </div>
</header>

<main class="container">

  <section class="forum-intro">
    <h2>Welcome to the Wonderlust Community</h2>
    <p>
      This is a space where hosts and guests can discuss topics, ask questions, and help each other succeed.
      Browse threads, ask questions, or share your hosting experience.
    </p>
  </section>

  <section class="forum-actions">
    <a href="#" class="btn-primary">Start New Thread</a>
  </section>

  <section class="threads-grid">
    <!-- Example threads; dynamically populate with DB -->
