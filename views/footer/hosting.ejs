<% layout("/layouts/boilerplate") %>

<link rel="stylesheet" href="/css/hosting.css" />

<header class="hosting-hero">
  <div class="hero-content">
    <h1>Try hosting on Wonderlust</h1>
    <p>Earn extra income by sharing your space with travelers around the world.</p>
    <a href="/listings/new" class="btn-primary">Get started</a>
  </div>
</header>

<main class="container">

  <section class="why-host">
    <h2>Why host with Wonderlust?</h2>

    <div class="features-grid">
      <div class="feature-card">
        <h3>Earn income</h3>
        <p>Set your own price and get paid securely after each completed stay.</p>
      </div>

      <div class="feature-card">
        <h3>Full control</h3>
        <p>Choose your availability, house rules, and cancellation policy.</p>
      </div>

