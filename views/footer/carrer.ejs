<!-- ================= CAREERS PAGE (EJS TEMPLATE) ================= -->
<% layout("/layouts/boilerplate") %>

<link rel="stylesheet" href="/css/carrer.css" />

<header class="careers-hero">
  <div class="hero-content">
    <h1>Careers at Wonderlust</h1>
    <p>Join our team and help create unforgettable travel experiences.</p>
    <a href="#open-positions" class="btn-primary">View Open Positions</a>
  </div>
</header>

<main class="container">

  <section class="intro">
    <h2>Why Work With Us?</h2>
    <p>
      At Wonderlust, we value innovation, collaboration, and passion for travel. Our team works
      together to create a platform that empowers hosts and delights travelers.
    </p>
  </section>

  <section id="open-positions" class="positions">
    <h2>Open Positions</h2>

    <div class="position-card">
      <h3>Frontend Developer</h3>
      <p>Location: Remote • Type: Full-time</p>
      <p>Work on our web platform, building responsive interfaces and enhancing user experiences.</p>
      <a href="/careers/apply/frontend" class="btn-link">Apply Now</a>
    </div>

    <div class="position-card">
      <h3>Backend Developer</h3>
      <p>Location: Remote • Type: Full-time</p>
      <p>Build and maintain APIs, databases, and server-side logic to support the Wonderlust platform.</p>
      <a href="/careers/apply/backend" class="btn-link">Apply Now</a>
    </div>

    <div class="position-card">
      <h3>Host Support Specialist</h3>
      <p>Location: Remote • Type: Full-time</p>
      <p>Assist hosts with inquiries, troubleshooting, and guidance to ensure smooth experiences.</p>
      <a href="/careers/apply/support" class="btn-link">Apply Now</a>
    </div>

  </section>

  <section class="cta">
    <h2>Interested in joining us?</h2>
    <p>Check out the positions above or reach out to our HR team for more information.</p>
    <a href="mailto:careers@wonderlust.com" class="btn-primary">Contact HR</a>
  </section>

</main>

<footer>
  © 2026 Wonderlust. All rights reserved.
</footer>


